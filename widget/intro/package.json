    "style": "intro.less",

    "themes": [
        {
            "name": "default",
            "desc": "默认",
            "options": {
                "leftCols": "5",
                "rightCols": "7",
                "position": "top"
            },
            "hook": "hook-am-intro-default",
            "variables": [
                {
                    "variable": "intro-hd-bg",
                    "name": "标题背景色",
                    "default": "#0e90d2",
